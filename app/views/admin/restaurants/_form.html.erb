<% if @restaurant.errors.any? %>
  <div id="errors">
    <p><%= pluralize(@restaurant.errors.count, 'error') %> prohibited this restaurant from being saved.</p>
    <% @restaurant.errors.full_messages.each do |msg| %>
      <div class="error">
        <p><%= msg %></p>
      </div>
    <% end %>
  </div>
<% end %>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <%= form_for [ :admin, @restaurant ] do |f| %>
      <div class="form-group">
        <%= f.label :image , "照片" %>
        <br />
        <%= image_tag @restaurant.image, width: "40%" if @restaurant.image? %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :name , "餐廳名稱" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :tel, "電話號碼" %>
        <%= f.text_field :tel, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :address, "地址" %>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :opening_hours, "營業時間" %>
        <%= f.text_field :opening_hours, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description, "備註" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.button :submit, class: "btn btn-default" %>
    <% end %>
  </div>
</div>
