<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="thumbnail">
      <%= image_tag @restaurant.image, width: "100%" if @restaurant.image? %>
      <div class="caption">
        <h3><%= @restaurant.name %></h3>
        <div class="wells">
          <h5>電話： <%= @restaurant.tel %></h5>
          <h5>地址： <%= @restaurant.address %></h5>
          <h5>營業時間： <%= @restaurant.opening_hours %></h5>
        </div>
        <p><%= @restaurant.description %></p>
        <p>
          <%= link_to '編輯', edit_admin_restaurant_path(@restaurant), class: "btn btn-primary" %>
          <%= link_to '回後台首頁', admin_root_path, class: "btn btn-default" %>
        </p>
      </div>
    </div>
  </div>
</div>