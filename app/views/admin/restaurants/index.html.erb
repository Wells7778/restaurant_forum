<h1>餐廳後台</h1>
<div class="row">
  <%= link_to '新增餐廳', new_admin_restaurant_path %>
  <% @restaurants.each do |restaurant| %>
    <div>
      <p><%= restaurant.name %></p>
      <div>
        <%= link_to '查看', admin_restaurant_path(restaurant) %>
        <%= link_to '編輯', edit_admin_restaurant_path(restaurant) %>
        <%= link_to '刪除', admin_restaurant_path(restaurant), method: :delete, data: { confirm: "確定刪除？" } %>
      </div>
    </div>
  <% end %>
  <%= paginate @restaurants %>
</div>