<h1>餐廳後台</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>名稱</th>
      <th>處理</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.id %></td>
        <td><%= restaurant.name %></td>
        <td>
          <%= link_to '查看', admin_restaurant_path(restaurant), class: "btn btn-primary" %>
          <%= link_to '編輯', edit_admin_restaurant_path(restaurant), class: "btn btn-primary" %>
          <%= link_to '刪除', admin_restaurant_path(restaurant), class: "btn btn-primary", method: :delete, data: { confirm: "確定刪除？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center"><%= paginate @restaurants %></div>